    <!-- Plugin di Ignition per la fisica dei motori (1 per ogni rotore) -->

    <!-- Plugin per Rotore 1 -->
    <plugin filename="ignition-gazebo-multicopter-motor-model-system"
      name="gz::sim::systems::MulticopterMotorModel">
      <robotNamespace>qr4</robotNamespace>
      <jointName>motor-1</jointName>
      <linkName>rotor-1_propeller</linkName>
      <turningDirection>cw</turningDirection>
      <momentConstant>0.0153846</momentConstant>  <!-- = ct/cf -->
      <commandSubTopic>gazebo/command/motor_speed</commandSubTopic>
      <motorNumber>0</motorNumber>
      <motorSpeedPubTopic>motor_speed/0</motorSpeedPubTopic>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>200.0</maxRotVelocity>
      <motorConstant>6.5e-04</motorConstant>     <!--cf-->
      <rollingMomentCoefficient>0</rollingMomentCoefficient>
      <rotorDragCoefficient>0</rotorDragCoefficient> 
      <rotorVelocitySlowdownSim>1</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>
    </plugin>

    <!-- Plugin per Rotore 2 -->
    <plugin filename="ignition-gazebo-multicopter-motor-model-system"
      name="gz::sim::systems::MulticopterMotorModel">
      <robotNamespace>qr4</robotNamespace>
      <jointName>motor-2</jointName>
      <linkName>rotor-2_propeller</linkName>
      <turningDirection>ccw</turningDirection>
      <momentConstant>0.0153846</momentConstant>  <!-- = ct/cf -->
      <commandSubTopic>gazebo/command/motor_speed</commandSubTopic>
      <motorNumber>1</motorNumber>
      <motorSpeedPubTopic>motor_speed/1</motorSpeedPubTopic>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>200.0</maxRotVelocity>
      <motorConstant>6.5e-04</motorConstant>     <!--cf-->
      <rollingMomentCoefficient>0</rollingMomentCoefficient>
      <rotorDragCoefficient>0</rotorDragCoefficient> 
      <rotorVelocitySlowdownSim>1</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>    
    </plugin>

    <!-- Plugin per Rotore 3 -->
    <plugin filename="ignition-gazebo-multicopter-motor-model-system"
      name="gz::sim::systems::MulticopterMotorModel">
      <robotNamespace>qr4</robotNamespace>
      <jointName>motor-3</jointName>
      <linkName>rotor-3_propeller</linkName>
      <turningDirection>cw</turningDirection>
      <momentConstant>0.0153846</momentConstant>  <!-- = ct/cf -->
      <commandSubTopic>gazebo/command/motor_speed</commandSubTopic>
      <motorNumber>2</motorNumber>
      <motorSpeedPubTopic>motor_speed/2</motorSpeedPubTopic>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>200.0</maxRotVelocity>
      <motorConstant>6.5e-04</motorConstant>     <!--cf-->
      <rollingMomentCoefficient>0</rollingMomentCoefficient>
      <rotorDragCoefficient>0</rotorDragCoefficient> 
      <rotorVelocitySlowdownSim>1</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>
    </plugin>

    <!-- Plugin per Rotore 4 -->
    <plugin filename="ignition-gazebo-multicopter-motor-model-system"
      name="gz::sim::systems::MulticopterMotorModel">
      <robotNamespace>qr4</robotNamespace>
      <jointName>motor-4</jointName>
      <linkName>rotor-4_propeller</linkName>
      <turningDirection>ccw</turningDirection>
      <momentConstant>0.0153846</momentConstant>  <!-- = ct/cf -->
      <commandSubTopic>gazebo/command/motor_speed</commandSubTopic>
      <motorNumber>3</motorNumber>
      <motorSpeedPubTopic>motor_speed/3</motorSpeedPubTopic>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>200.0</maxRotVelocity>
      <motorConstant>6.5e-04</motorConstant>     <!--cf-->
      <rollingMomentCoefficient>0</rollingMomentCoefficient>
      <rotorDragCoefficient>0</rotorDragCoefficient> 
      <rotorVelocitySlowdownSim>1</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>
    </plugin>

    <plugin
      filename='libignition-gazebo6-odometry-publisher-system.so'
      name='ignition::gazebo::systems::OdometryPublisher'>
      <odom_topic>/model/qr4/odometry</odom_topic>
      <robot_base_frame>base</robot_base_frame>
      <odom_publish_frequency>200</odom_publish_frequency>
      <odom_frame>world</odom_frame>
      <dimensions>3</dimensions>
    </plugin>
  </model>
</sdf>