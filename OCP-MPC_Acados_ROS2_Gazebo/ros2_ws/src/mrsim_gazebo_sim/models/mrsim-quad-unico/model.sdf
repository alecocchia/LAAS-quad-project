    <!-- Plugin personalizzato per la conversione wrench-motore -->
    
    <plugin
      name="mrsim_gazebo_sim::MrsimDroneIgnPlugin"
      filename="libmrsim_drone_ign_plugin.so">
      <wrench_topic>/model/qr4/wrench_cmd</wrench_topic>
      <motor_speed_topic>/gazebo/command/motor_speed</motor_speed_topic>
      <rotors>
        <cf>6.5e-04</cf>
        <ct>1e-05</ct>
        <rotor><joint spin="cw">motor-1</joint></rotor>
        <rotor><joint spin="ccw">motor-2</joint></rotor>
        <rotor><joint spin="cw">motor-3</joint></rotor>
        <rotor><joint spin="ccw">motor-4</joint></rotor>
      </rotors>
    </plugin>

